@using ASI.Basecode.Services.ServiceModels
@model TopicViewModel

@section styles {
    <link rel="stylesheet" href="~/css/viewtopic.css" />
}
@{
    ViewData["Title"] = "View Topic";
    ViewBag.IsViewTopicPage = true;
}

<div class="screen-container">
    <div class="inside-container">
        <form method="post" asp-action="ViewTopic">
            <input type="hidden" class="input-design" asp-for="TopicId">
            <div class="form-group">
                <label for="topicName" class="inputs-label">TOPIC NAME</label>
                <input type="text" class="input-design" asp-for="TopicName" readonly><br><br>
            </div>
            <div class="form-group">
                <label for="trainingDesc" class="inputs-label">DESCRIPTION/ LESSON</label>
                <textarea type="text" class="text-area-design" asp-for="TopicDesc" readonly></textarea><br><br>
            </div>
                   
            <div class="form-group">
                <div style="display: flex;">
                    <label>RESOURCE MATERIAL</label>
                    <div style="width: 8%">
                        <img src="~/img/materialRB.png" style="width: 100%;" alt="dp">
                    </div>
                </div>
                <div>
                    @if (!string.IsNullOrEmpty(Model.TopicFile))
                    {
                        <div class="topicFileDiv">
                            <p class="currentFile">Current file: </p>
                            <p class="fileData">@Model.TopicFile</p>
                        </div>
                    }
                    else
                    {
                        <p class="currentFile">No file uploaded</p>
                    }
                </div>
            </div>
            <div class="bottom-buttons">
                <a class="back-button" asp-controller="Topic" asp-action="Topics" asp-route-trainingId="@ViewBag.TrainingId">
                    <p class="back-button-p">BACK TO LIST</p>
                </a>
            </div>
        </form>
    </div>
</div>
@section scripts{
}