@using ASI.Basecode.Services.ServiceModels
@model TrainingViewModel
@section styles {
    <link rel="stylesheet" href="~/css/createtraining.css" />
}

@{
    ViewData["Title"] = "Add Training";
    ViewBag.IsAddTrainingPage = true;
}


<div class="screen-container">
    <div class="inside-container">
        <form method="post" enctype="multipart/form-data" asp-action="CreateTraining" >
            <div class="form-group">
                <label>TRAINING TITLE</label>
                <input type="text" class="form-control" asp-for="TrainingName">
            </div>
            <div class="form-group">
                <label>DESCRIPTION</label>
                <input type="text" class="form-control" asp-for="TrainingDesc">
            </div>
            <div class="form-group">
                <label>AUTHOR</label>
                <input type="text" class="form-control" asp-for="TrainingAuthor">
            </div>

            <div class="form-group">
                <label>CATEGORY</label>
                <select class="form-control" asp-for="CategoryId">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.CategoryName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>UPLOAD COVER IMAGE</label>
                <input asp-for="ImageFile" type="file" accept=".png, .jpg" class="form-control-file" >
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</div>
