@{
    ViewData["Title"] = "Training Page";
    ViewBag.IsRatingPage = true;
}
@section styles {
    <link rel="stylesheet" href="~/css/rating.css" />
}

<div class="container-div">
    <div class="inside-container">
        <div class="rating-box-div">
            <p class="rate-training-p">RATE TRAINING</p>
            <div class="upper-row-div">
                <div class="input-div">
                    <label class="inputs-label" for="name">Name</label><br>
                    <input type="text" id="name" class="input-style" placeholder="Enter name" />
                    <span class="text-danger"></span><br>
                </div>
                <div class="input-div">
                    <label class="inputs-label" for="userId">Email Address</label><br>
                    <input type="email" id="userId" class="input-style" placeholder="Enter email address" />
                    <span class="text-danger"></span><br>
                </div>
                <div class="input-div">
                    <label class="inputs-label" for="userId">Star Rating</label><br>
                    <div class="star-rating" id="rating">
                        <span data-value="1" class="star"><i class="fas fa-star star-design"></i></span>
                        <span data-value="2" class="star"><i class="fas fa-star star-design"></i></span>
                        <span data-value="3" class="star"><i class="fas fa-star star-design"></i></span>
                        <span data-value="4" class="star"><i class="fas fa-star star-design"></i></span>
                        <span data-value="5" class="star"><i class="fas fa-star star-design"></i></span>
                    </div>
                    <input type="hidden" id="rating-input" value="0" />
                </div>
            </div>
            <div class="input-div2">
                <textarea id="comment" class="input-style2" placeholder="Have a comment? Type it here!..." rows="10"></textarea>
                <span class="text-danger"></span><br>
            </div>
            <div class="button-div">
                <button type="submit" class="button-submit">Submit</button>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        const stars = document.querySelectorAll('.star');
        const ratingInput = document.getElementById('rating-input');

        stars.forEach(star => {
            star.addEventListener('click', () => {
                const value = parseInt(star.getAttribute('data-value'));
                ratingInput.value = value;
                updateStars(value);

                // Add a console log to display the selected value
                console.log(`Selected Value: ${value}`);
            });
        });

        function updateStars(value) {
            stars.forEach(star => {
                const starValue = parseInt(star.getAttribute('data-value'));
                const starIcon = star.querySelector('i');

                if (starValue <= value) {
                    starIcon.classList.add('fas', 'selected-star');
                    starIcon.classList.remove('far');
                } else {
                    starIcon.classList.remove('fas', 'selected-star');
                    starIcon.classList.add('far');
                }
            });
        }
    </script>


}